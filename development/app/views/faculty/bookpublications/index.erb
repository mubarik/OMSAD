<%= content_for :content do  %>
  <div class="pageHeadingBar">
    <h1>Books</h1>
  </div>
  <hr class="headingLineBreak"/>
    <%unless @book_publication_wrappers.blank?%>
      <% if !flash[:success].blank? %>
        <div class="messages">
          <p><%=flash[:success]%></p>
        </div>
       <%end%>

       <%=render :partial=>"layouts/applicationindex" ,
           :collection=>@book_publication_wrappers,
           :as=>:wrapper%>
     <%else%>
       <div class="dataBlock">
          <div class="dataPadder">
            No book is available right now. To continue, please <%= link_to "add a book publication", :controller => "bookpublications", :action => "new"%>
          </div>
       </div>
      <%end%>
  <%end%>
<% content_for :menu do %>
  <%= render "faculty/navigationmenu" %>
<%end%>
