<% content_for :menu do %>
    <%= render "graduate_students/navigationmenu" %>
<% end %>

<% content_for :content do %>
    <div class="pageHeadingBar">
        <h1>Courses</h1>
    </div>
    <hr class="headingLineBreak"/>

    <%unless @courses.blank?%>
        <% if !flash[:noticename].blank? %>
          <div class="messages">
            <p><%=flash[:noticename]%></p>
          </div>
          <div class="clearFloatingAndStartFromBelow"></div>
        <%end%>

        <%=render :partial=>"layouts/applicationindex", :collection=>@courses, :as=>:wrapper%>
    <%else%>
      <div class="dataBlock">
        <div class="dataPadder">
           No new course is available right now. To continue, please <%= link_to "add a course", :controller => "courses", :action => "new"%>
        </div>
      </div>
    <%end%>
<%end%>