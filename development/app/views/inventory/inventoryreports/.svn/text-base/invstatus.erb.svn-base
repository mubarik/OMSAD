<% content_for :menu do %>
        <%= render "inventory/navigationmenu" %>
<% end %>


<% content_for :content do %>

   <head>  </head>
    <div class="pageHeadingBar">
          <h1>Inventory Type Report</h1>
    </div>
    <hr class="headingLineBreak"/>

  <%= grid(@invstatus_grid, :show_filters => :always) do |g|

    g.column :column_name => 'Sr. No', :attribute_name => 'inventory_id', :no_filter => true   do |invstatus|
      invstatus.inventory_id
    end

    g.column :column_name => 'Inventory Name', :attribute_name => 'inventory_id', :no_filter => true   do |invstatus|
      invstatus.inventory.inventoryname
    end

    g.column :column_name => 'Type', :attribute_name => 'inventory_id', :no_filter => true   do |invstatus|
      invstatus.inventory.inventory_type.inventorytypename
    end

    g.column :column_name => 'Brand', :attribute_name => 'inventory_id', :no_filter => true  do |invstatus|
      invstatus.inventory.brand
    end

    g.column :column_name => 'Model', :attribute_name => 'inventory_id', :no_filter => true   do |invstatus|
      invstatus.inventory.model
    end

    g.column :column_name => 'Owner', :attribute_name => 'user_id', :no_filter => true   do |invstatus|
      invstatus.user.name
    end

  end %>

<% end %>


