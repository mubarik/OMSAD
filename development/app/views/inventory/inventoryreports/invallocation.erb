<% content_for :menu do %>
        <%= render "inventory/navigationmenu" %>
<% end %>


<% content_for :content do %>

   <head>  </head>
    <div class="pageHeadingBar">
          <h1>Inventory Report</h1>
    </div>
    <hr class="headingLineBreak"/>

  <%= grid(@tasks_grid, :show_filters => :always) do |g|

    g.column :column_name => 'Sr. No', :attribute_name => 'inventory_id', :no_filter => true   do |task|
      task.inventory_id
    end

    g.column :column_name => 'Type', :attribute_name => 'inventory_id', :no_filter => true   do |task|
      task.inventory.inventory_type.inventorytypename
    end

    g.column :column_name => 'Inventory Name', :attribute_name => 'inventory_id', :no_filter => true   do |task|
      task.inventory.inventoryname
    end

    g.column :column_name => 'Owner', :attribute_name => 'user_id', :no_filter => true   do |task|
      task.user.name
    end

    g.column :column_name => 'Brand', :attribute_name => 'inventory_id'  do |task|
      task.inventory.brand
    end

    g.column :column_name => 'Model', :attribute_name => 'inventory_id', :no_filter => true   do |task|
      task.inventory.model
    end

     g.column :column_name => 'Start Date', :attribute_name => 'startdate', :no_filter => true   do |task|
      task.startdate
    end

  end %>

<% end %>


