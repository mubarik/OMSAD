<% content_for :menu do %>
        <%= render "inventory/navigationmenu" %>
<% end %>

<% content_for :content do %>


    <%= form_tag({:controller => "locations", :action => "create"}) do%>
      <div class ="ContentWraper">

      <div class= "contentHeading">


      <h3 style="margin-top: 10px;">Add Location Item</h3>

    </div>
    </div>
    <div class ="contentHeadingLine">

           <hr/>

     </div>
 <div class="mandatory">Fields marked (*) are mandatory</div>
  <div class="notifyRed"> <%= flash[:msgRed] %></div>
  <div class="notifyGreen"> <%= flash[:msgGreen] %></div>
  
  <div style="margin-left: 5%;margin-top:5%; ">

      <div class="formfield">
          <div class ="Label_Tag_Setting">
            <%= label_tag(:lblname, "Room No: *") %>
          </div>

          <div >
          <%=collection_select(:roomdetail,:id,@roomdetails,:id,:roomnumber,options={:prompt => "Select Room"}, :class => "roomdetail", :required => true)%>
          <%=flash[:roomnotice]%>
          </div>
        </div>
      <br/><br/>
      
      <div class="formfield">
        <div class ="Label_Tag_Setting">
          <%= label_tag(:lblname, "Location Type: *") %>
        </div>
        <div >
          <%=collection_select(:locationtype, :id,@locationtypes, :id,:locationtypename, options={:prompt => "Select location type"},  :class => "location", :required => true)%>
          <%=flash[:typenotice]%>
        </div>
     </div>
     <br/><br/>
     
 <div class="formfield">
      <div class ="Label_Tag_Setting">
        <%= label_tag(:lblname, "Location Name: *") %>
      </div>
      <div class="CText">
        <%=text_field_tag(:locationname,nil)%> <%=flash[:notice]%><%flash[:invalidnotice]%>
      </div>
 </div>
   <br/>
         <br/>
 <div class="formfield">
      <div class ="Label_Tag_Setting">
        <%= label_tag(:lblname, "Description:") %>
      </div>
      <div class="CText">
        <%=text_field_tag(:description,nil)%>
      </div>
 </div>
 <br/>
         <br/>

     <br/>
     <div style="width:50%;float:left;"></div>
     <div style="width:70%;float:right;">
      <%=submit_tag("Create")%>
     </div>


</div>

  <%end%>
<%end%>

