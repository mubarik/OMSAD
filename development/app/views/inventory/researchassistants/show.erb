<% content_for :menu do %>
       <%= render "inventory/navigationmenuRATA" %>
<% end %>

<% content_for :content do %>
 <div class="pageHeadingBar">
        <h1>Research Assistant</h1>
    </div>
    <hr class="headingLineBreak"/>

    <% if !flash.now[:notice].blank? %>
      <div class="messages">
        <p><%=flash.now[:notice]%></p>
      </div>
       <%#*if end%>
    <%end%>

    <% if !flash.now[:error].blank? %>
      <div class="errors">
        <p><%=flash.now[:error]%></p>
      </div>
    <%#*if end%>
    <%end%>


    <div class="moreInfodisplayPicWithTextWrap">
        <%if @r_assistant.photo_file_name.nil? %>
        <%if @r_assistant.gender == 'Male'%>
            <%=image_tag("user.png", :class=>'profilePicture')%>
        <%else%>
            <%=image_tag("female_user.png", :class=>'profilePicture')%>
        <%end%>
      <%else%>
        <%=image_tag(@r_assistant.photo, :class=>'profilePicture')%>
      <%end%>

        <h1><%=@r_assistant.name%></h1>
    </div>

    <div class="clearFloatingAndStartFromBelow"></div>
    <div class="expandingBlock">
         <div class="expanderHeaderBar">
           <%=image_tag("", :alt=>'', :class=>'expanderDownButton')%>
           <h2>Basic Information</h2>
           <div class="expander">
              <table>
                 <tr><td class="labelDefinitionTerm">Date of Birth:</td><td class="labelDefinitionDetails"><%=  @r_assistant.dateofbirth %></td></tr>
              </table>
          
           </div>
         </div>
         <div class="expanderHeaderBar">
           <%=image_tag("", :alt=>'', :class=>'expanderDownButton')%>
             <h2>Contact Information</h2>
             <div class="expander">
                <table>
                      <tr><td class="labelDefinitionTerm">Address:</td><td class="labelDefinitionDetails"><%= @r_assistant.address %></td></tr>
                      <tr><td class="labelDefinitionTerm">Contact Number:</td><td class="labelDefinitionDetails"><%=  @r_assistant.contactnumber %></td></tr>
                      <tr><td class="labelDefinitionTerm">Email:</td><td class="labelDefinitionDetails"><%=  @r_assistant.email %></td></tr>
                </table>
             </div>
         </div>
         <div class="expanderHeaderBar">
           <%=image_tag("", :alt=>'', :class=>'expanderDownButton')%>
           <h2>Research Assistant Information</h2>
             <div class="expander">
                <table>
                   <tr><td class="labelDefinitionTerm">Employee ID:</td><td class="labelDefinitionDetails"><%=  @r_assistant.research_assistant.employee_id %></td></tr>
                   <%if !@r_assistant.research_assistant.document_file_name.blank?%>
                    <tr>
                      <td class="labelDefinitionTerm">Evaluation Report:</td>
                      <td class="labelDefinitionDetails">
                        <%= link_to @r_assistant.research_assistant.document_file_name.blank?? '' : @r_assistant.research_assistant.document_file_name,  @r_assistant.research_assistant.document.url  %>
                      </td>
                    </tr>
                   <%end%>
                   <div class="expander">
                   <tr><td class="labelDefinitionTerm">Description:</td><td class="labelDefinitionDetails"><%=  @r_assistant.research_assistant.description %></td></tr>
                   </div>
                   <%unless @r_assistant.research_assistant.research_grant.blank?%>
                   <tr><td class="labelDefinitionTerm">Research Grant:</td><td class="labelDefinitionDetails"><%=  @r_assistant.research_assistant.research_grant.title %></td></tr>
                   <%end%>
                </table>
             </div>
         </div>


    
       </div>
<%end%>
