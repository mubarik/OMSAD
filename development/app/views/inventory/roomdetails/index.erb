<% content_for :menu do %>
        <%= render "inventory/navigationmenu" %>
<% end %>

<%= content_for :content do  %>
       <div class="pageHeadingBar">
          <h1>Rooms</h1>
      </div>
      <hr class="headingLineBreak"/>
       <% if !flash[:msgGreen].blank? %>
        <div class="messages">
          <p><%=flash[:msgGreen]%></p>
        </div>
       <%end%>


        <%unless @roomdetail_list_wrappers.blank?%>
         <%=render :partial=>"layouts/applicationindex" ,
                   :collection=>@roomdetail_list_wrappers,
                   :as=>:wrapper%>
        <%else%>
          <div class="dataBlock">
            <div class="dataPadder">
              No room has been added yet. To continue, please <%= link_to "add room", :controller => "roomdetails", :action => "new"%>
            </div>
          </div>
        <%end%>

<%end%>